<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <RootNamespace>Rest.Json</RootNamespace>
    <Version>1.0.0.1</Version>
    <Description>A simple, lightweight and mockable C# Rest client focused on JSON but works also with XML, plain text and raw bytes, built on top of HttpClient, Newtonsoft.Json and XmlSerializer.</Description>
    <Authors>QubicaAMF</Authors>
    <Company />
    <Product />
    <PackageLicenseUrl>https://raw.githubusercontent.com/qubicaamf/Rest.Json/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/qubicaamf/Rest.Json</PackageProjectUrl>
    <PackageTags>rest json</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.5.0" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

</Project>
